<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.elearneur.edubox">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EduBox.Fullscreen">

        <activity android:name=".login.ForgotPassword" android:theme="@style/Theme.Design.Light.NoActionBar"/>
        <activity android:name=".login.Register" android:theme="@style/Theme.Design.Light.NoActionBar"/>
        <activity android:name=".login.Login" android:theme="@style/Theme.Design.Light.NoActionBar"/>

        <activity android:name=".calendar.Test"></activity>
        <activity android:name=".calendar.NotificationView" />
        <activity android:name=".calendar.Notifications" />
        <activity android:name=".calendar.GroupCalendar" />
        <activity android:name=".calendar.PersonalCalendar" />
        <activity
            android:name=".calendar.EventAdd"
            android:parentActivityName=".calendar.PersonalCalendar" />
        <activity android:name=".calendar.GroupJoin" />
        <activity android:name=".calendar.GroupCreate" />
        <activity android:name=".calendar.Groups" />
<!--        <activity android:name=".MainActivity">-->


        <!-- Detailed Analysis Activity -->
        <activity
            android:name=".detailedanalysis.DetailedAnalysisActivity"
            android:label="@string/title_activity_detailed_analysis"
            android:theme="@style/Theme.EduBox.NoActionBar"
            android:parentActivityName=".MainActivityMenu" />
        <activity
            android:name=".MainActivityMenu"
            android:label="@string/title_activity_main_menu"
            android:theme="@style/Theme.EduBox.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity> <!-- SplashScreen Activity -->
        <activity
            android:name=".SplashScreen"
            android:theme="@style/Theme.EduBox.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>